@using EliteWebTechAssignment.Domain.Models
@model StudentEntityModel

<form method="post" asp-action="CreateStudent">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">
                Add Student
            </h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="studentName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="programmeId"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="studentName" class="form-control"></input>
                    </div>
                    <div class="col-4">
                        <select id="ProgrammeSelector" asp-for="programmeId" class="form-control" asp-items="@(new SelectList(Model.employeeStates, nameof(EmployeeState.StateId), nameof(EmployeeState.StateName)))">
                            <option value="-1" selected>---Select State---</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>