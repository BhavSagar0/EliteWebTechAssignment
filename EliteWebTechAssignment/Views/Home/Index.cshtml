@using EliteWebTechAssignment.Domain.Models
@model IEnumerable<StudentEntityModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Students List
            </h2>
        </div>
        <div class="col-12 text-right">
            <a asp-controller="Home" asp-action="CreateStudent" class="btn btn-primary">Add Student</a>
            <a asp-controller="Home" asp-action="CreateProgramme" class="btn btn-primary">Add Programme</a>
            <a asp-controller="Home" asp-action="AddStudentIntakeYear" class="btn btn-primary">Add Student Intake Year</a>
            <a asp-controller="Home" asp-action="Create" class="btn btn-primary">Add Student Current Semester</a>
            <a asp-controller="Home" asp-action="Create" class="btn btn-primary">Add Programme Subjects</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Student Id
                    </th>
                    <th>
                        Student Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var student in Model)
                {
                    <tr>
                        <td width="30%">@student.studentId</td>
                        <td width="30%">@student.studentName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No students yet!</p>
    }
</div>