@model EliteWebTechAssignment.BusinessServices.ViewModels.CreateProgrammeViewModel

<link rel="stylesheet" href="~/css/Create.css" />
<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/js/Create.js"></script>

@if (Model.isSuccess != null)
{
    if ((bool)Model.isSuccess)
    {
        <div class="alert">
            The programme was added successfully!
            <p>You'll be automatically redirected in <span id="count">5</span> seconds...</p>
        </div>
    }
}

<form method="post" asp-action="CreateProgramme">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">
                Add Programme
            </h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="programme.programmeName"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="subject1"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="subject2"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="subject3"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="programme.programmeName" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="@Model.subject1" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="@Model.subject2" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="@Model.subject3" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col myBtn">
                            <input type="submit" class="btn btn-info w-75" value="Create" />
                        </div>
                        <div class="col myBtn">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>